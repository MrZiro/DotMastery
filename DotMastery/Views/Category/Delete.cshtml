@model Category
@{
	ViewData["Title"] = "Category | Edit";
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>

		<div class="mb-4 row px-2">
			<label asp-for="Name">Category Name</label>
			<input asp-for="Name" disabled class="form-control" />
		</div>
		<div class="mb-4 row px-2">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" disabled class="form-control" />
		</div>
		<div class="row mt-3">
			<div class="col-6 col-lg-2">
				<button type="submit" class="btn btn-danger form-control rounded">Delete</button>

			</div>
			<div class="col-6 col-lg-2">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control rounded">Back to List</a>

			</div>
		</div>

	</div>
</form>
